import matplotlib.pyplot as plt
import numpy as np

plt.rcParams['font.size'] = 14
plt.rcParams['mathtext.fontset'] = "dejavusans" # dejavuserif or dejavusans
plt.rcParams['text.usetex'] = True  # use latex for all text handling

fig, ax = plt.subplots()
ax.set_ylim(-0.5,0.5)
ax.set_axis_off()

xend = 1.3
y_part = 0.18
x = np.linspace(0,xend*0.95, 15)
x = x[::-1]
ax.text(x[0], y_part, r"$\nu_e$")
ax.text(x[1], y_part, r"$\nu_{\mu}$")
ax.text(x[2], y_part, r"$e^{-}$")
ax.text(x[3], y_part, r"$u$")
ax.text(x[4], y_part, r"$d$")
ax.text(x[5], y_part, r"$\nu_{\tau}$")
ax.text(x[6], y_part, r"$\mu$")
ax.text(x[7], y_part, r"$s$")
ax.text(x[8], y_part, r"$c$")
ax.text(x[9], y_part, r"$\tau$")
ax.text(x[10], y_part, r"$b$")
ax.text(x[11], y_part, r"$W^{\pm}$")
ax.text(x[12], y_part, r"$Z^{0}$")
ax.text(x[13], y_part, r"$H$")
ax.text(x[14], y_part, r"$t$")

# TEMPO
ax.plot([0, xend],[0.1, 0.1], '-', color="black")
ax.plot([xend],[0.1],'>',color="black")
ax.text(xend +0.05, 0.09, r"$t$")

# Momento
ax.plot([0, xend],[0, 0], '-', color="black")
ax.plot([0],[0],'<',color="black")
ax.text(-0.12, -0.01, r"$|\overrightarrow{q} |$")

ax.text(xend - 0.15, -0.1, "Non rel.")
ax.text(0, -0.1, "Ultra rel.")

fig.savefig("3-0_cooldown_particelle.pdf", bbox_inches="tight")
